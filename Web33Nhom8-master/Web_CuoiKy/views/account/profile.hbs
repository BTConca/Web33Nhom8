{{#section 'title'}}
    Profile
{{/section}}
{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/assets/bootstrap-3.3.7/css/bootstrap.min.css">
{{/section}}
<div class="container" style="margin-top:100px;">
    
	<div class="row">
      <div class="col-md-3 mx-auto"></div>
      <!-- edit form column -->
      <div class="col-md-6 personal-info">
        
        <h3>Personal info</h3>
        <div class="col-md-12 ">
            <div class="login-or">
                    <hr class="hr-or">
                    <span class="span-or"></span>
            </div>
        </div>
        <form class="form-horizontal" role="form">
            <div class="form-group">
            <label class="col-lg-3 control-label">ID:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value={{layoutVM.curUser.f_ID}}>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Username:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value={{layoutVM.curUser.f_Username}}>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email address:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value={{layoutVM.curUser.f_Email}}>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Name:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value={{layoutVM.curUser.f_Name}}>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Day of Birth:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value={{layoutVM.curUser.f_DOB}}>
            </div>
          </div>
          
           <div class="col-md-12 ">
            <div class="login-or">
                    <hr class="hr-or">
                    <span class="span-or"></span>
            </div>
        </div>
      </div>
  </div>
</div>
