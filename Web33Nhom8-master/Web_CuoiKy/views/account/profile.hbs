{{#section 'title'}}
    Profile
{{/section}}


<div class="container" style="margin-top:40px;">
    
	<div class="row">
      <div class="col-md-3 mx-auto"></div>
      <!-- edit form column -->
      <div class="col-md-6 personal-info">
        
        <h3>Personal info</h3>
        <div class="col-md-12 ">
            <div class="login-or">
                    <hr class="hr-or">
                    <span class="span-or"></span>
            </div>
        </div>
        {{#with user}}
        <form class="form-horizontal" role="form">
            <div class="form-group">
            <label class="col-lg-3 control-label">ID:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value="{{f_ID}}" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Username:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value="{{f_Username}}" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email address:</label>
            <div class="col-lg-8">
              <input class="form-control" type="email" value="{{f_Email}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Name:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value="{{f_Name}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Day of Birth:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value="{{f_DOB}}">
            </div>
          </div>
               <div class="form-group">
            <label class="col-lg-3 control-label">Adress:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value="{{f_Adress}}">
            </div>
          </div>
          {{/with}}
           <div class="col-md-12 ">
            <div class="login-or">
                    <hr class="hr-or">
                    <span class="span-or"></span>
            </div>
        </div>
      </div>
  </div>
</div>
